@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4" style="background-color: var(--black-color); border-bottom: solid 1px var(--primary-color);">
            <a href="https://github.com/CaioMBA" target="_blank"><img src="assets/icons/GitHub-Logo.png" alt="Alternate Text" /></a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>