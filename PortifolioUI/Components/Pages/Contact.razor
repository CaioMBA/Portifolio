@page "/contact"
@rendermode InteractiveServer
@inject IContactService _service;

<PageTitle>Contact</PageTitle>
<link href="style/Contact.css" rel="stylesheet" />


<div class="main-container">
    <ul class="main-row">
        <li class="section-title">
            <h2>Contact me</h2>
        </li>
    </ul>
    <h3 class="contact-title">Have you got any questions?</h3>
    <h4 class="contact-sub-title">I'm at your services!</h4>
    <ul class="main-row">
        <li class="contact-info-item">
            <div class="icon">
                <i class="fa-brands fa-whatsapp"></i>
            </div>
            <h4>Message me on</h4>
            <p>+55 (11) 95253-1011</p>
        </li>
        <li class="contact-info-item">
            <div class="icon">
                <i class="fa fa-map-marker-alt"></i>
            </div>
            <h4>Office</h4>
            <p>São Paulo</p>
        </li>
        <li class="contact-info-item">
            <div class="icon">
                <i class="fa fa-envelope"></i>
            </div>
            <h4>Email</h4>
            <p>caiombaraujo@gmail.com</p>
        </li>
        <li class="contact-info-item">
            <div class="icon">
                <i class="fa fa-globe-europe"></i>
            </div>
            <h4>Website</h4>
            <p>https://github.com/OFA-Tech</p>
        </li>
    </ul>
    <h3 class="contact-title">Send me an email</h3>
    <h4 class="contact-sub-title">I'm very responsive to messages</h4>
    <ul class="main-row">
        <li class="contact-form">
            <ul class="main-row">
                <li class="form-item colx-6">
                    <div class="forms-group">
                        <input type="text" class="forms-control" placeholder="Name" />
                    </div>
                </li>
                <li class="form-item colx-6">
                    <div class="forms-group">
                        <input type="email" class="forms-control" placeholder="Email" />
                    </div>
                </li>
                <li class="form-item colx-12">
                    <div class="forms-group">
                        <input type="text" class="forms-control" placeholder="Subject" />
                    </div>
                </li>
                <li class="form-item colx-12">
                    <div class="forms-group">
                        <textarea name="" class="forms-control" id="" placeholder="Message"></textarea>
                    </div>
                </li>
                <li class="form-item colx-12">
                    <button type="submit" class="button">Send</button>
                </li>
            </ul>
        </li>
    </ul>
</div>


